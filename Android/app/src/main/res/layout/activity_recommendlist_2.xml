<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollview"
    tools:context=".Recommend.Recommendlist_2Activity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:shrinkColumns="*">

        <GridView
            android:id="@+id/gridViewImages"
            android:layout_width="474dp"
            android:layout_height="215dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="8dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:verticalSpacing="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.536"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </GridView>

        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gridViewImages"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="162dp"
            android:layout_marginBottom="8dp"
            android:text='"한방통닭"'
            android:textSize="27sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.274"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.336" />
      <TableRow>

          <Button
              android:id="@+id/favorite_button"
              android:layout_width="69dp"
              android:layout_height="49dp"
              android:layout_below="@id/place_name"
              android:layout_alignParentStart="true"
              android:layout_marginStart="48dp"
              android:layout_marginTop="8dp"
              android:layout_marginEnd="8dp"
              android:layout_marginBottom="8dp"
              android:background="#00ff0000"
              android:drawableTop="@drawable/ic_favorite_border_black_24dp"
              android:gravity="center"
              android:text="좋아요"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.119"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="0.417"
              />

          <Button
              android:id="@+id/evaluate_button"
              android:layout_width="69dp"
              android:layout_height="49dp"
              android:layout_below="@id/place_name"
              android:layout_marginTop="8dp"
              android:layout_marginEnd="8dp"
              android:layout_marginBottom="8dp"
              android:layout_toRightOf="@id/favorite_button"
              android:background="#00ff0000"
              android:drawableTop="@drawable/ic_edit_black_24dp"
              android:gravity="center"
              android:text="평가하기"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.374"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="0.417" />

          <Button
              android:id="@+id/camera_button"
              android:layout_width="69dp"
              android:layout_height="49dp"
              android:layout_below="@id/place_name"
              android:layout_marginTop="8dp"
              android:layout_marginEnd="8dp"
              android:layout_marginBottom="8dp"
              android:layout_toRightOf="@id/evaluate_button"
              android:background="#00ff0000"
              android:drawableTop="@drawable/ic_camera_alt_black_24dp"
              android:gravity="center"
              android:text="사진올리기"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.511"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="1.0" />

          <Button
              android:id="@+id/share_button"
              android:layout_width="71dp"
              android:layout_height="50dp"
              android:layout_below="@id/place_name"
              android:layout_alignParentEnd="true"
              android:layout_marginTop="8dp"
              android:layout_marginEnd="61dp"
              android:layout_marginBottom="8dp"
              android:layout_toRightOf="@id/camera_button"
              android:background="#00ff0000"
              android:drawableTop="@drawable/ic_share_black_24dp"
              android:gravity="center"
              android:text="공유하기"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.88"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintVertical_bias="0.417" />

      </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/place_address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="위치 :"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/place_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_span="3"
                android:text="서울 용산구 대사관로34길 38"
                android:textSize="20sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="메뉴 :"
                android:textSize="20sp"
           />

            <TextView
                android:id="@+id/place_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한방통닭 18000 / "
                android:layout_span="3"
                android:textSize="20sp"
              />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="시간 :"
                android:textSize="20sp"
                 />

            <TextView
                android:id="@+id/place_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_span="3"
                android:layout_toRightOf="@id/textView20"
                android:text="매일 17:00 - 02:00"
                android:textSize="20sp"
               />
        </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/place_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="번호 :"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/place_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:layout_toRightOf="@id/textView20"
            android:text="00000000"
            android:textSize="20sp"
            />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/place_information_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="정보 :"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/place_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:layout_toRightOf="@id/textView20"
                android:textSize="20sp" />
        </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="23dp"
                android:background="#474545">

            </View>


    <TableRow>
        <TextView
            android:id="@+id/wordcloud"
            android:gravity="center"
            android:text="맛집 후기"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/wordcloud_date"
            android:gravity="center"
            android:text="2017년 1월 13일 업로드"
            android:textSize="20sp"
            android:layout_span="3"
            />
    </TableRow>

    </TableLayout>
</ScrollView>